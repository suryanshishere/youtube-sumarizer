{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "esnext"],
      "allowJs": true,
      "jsx": "react-jsx",   
      "moduleResolution": "node",
      "module": "esnext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*", "postcss.config.js"
    ]
  }
  